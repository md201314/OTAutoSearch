		 xAxis:[{type:'value',axisLabel:{formatter:'{value}'},name:'HJD'}],
                 yAxis:[{type:'category',axisLine:{onZero:false},axisLabel:{formatter:'{value}'},boundaryGap:false,data:{{mag}},name:'Mag' }],
